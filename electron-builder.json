{
  "productName": "design-tracer",
  "directories": {
    "output": "release/"
  },
  "extraResources": [
    "./build/**"
  ],
  "files": [
      "**/*",
      "build/icon.*",
      "!**/*.ts",
      "!*.code-workspace",
      "!LICENSE.md",
      "!package.json",
      "!package-lock.json",
      "!src/",
      "!e2e/",
      "!hooks/",
      "!angular.json",
      "!_config.yml",
      "!karma.conf.js",
      "!tsconfig.json",
      "!tslint.json"
  ],
  "win": {
    "icon": "build/icon.ico",
    "target": [
      "portable"
    ]
  },
  "mac": {
    "icon": "build/icon.ico",
    "target": [
      "dmg"
    ]
  },
  "linux": {
    "icon": "build/icon.ico",
    "target": [
      "AppImage"
    ]
  }
}
